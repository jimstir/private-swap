# Litecoin Core RPC Configuration
LITECOIN_RPC_USER=your_rpc_username
LITECOIN_RPC_PASSWORD=your_rpc_password
LITECOIN_RPC_HOST=127.0.0.1
LITECOIN_RPC_PORT=19332  # Testnet default: 19332, Mainnet default: 9332
LITECOIN_WALLET=swap_wallet

# Network (testnet or mainnet)
NETWORK=testnet

# Swap Configuration
MIN_SWAP_AMOUNT=0.00001  # Minimum swap amount in LTC
MAX_SWAP_AMOUNT=1000      # Maximum swap amount in LTC
DEFAULT_FEE_RATE=0.00002  # Default fee rate in LTC/kB

# Logging
LOG_LEVEL=info
LOG_FILE=logs/swap.log
